{
    "openapi": "3.0.0",
    "info": {
        "title": "Todo API",
        "description": "This is an open and free to use API for developers to test their client projects.\n        All api calls require you to pass in <br> your API Key with the querystring\n        <b>?apikey=########-####-####-####-############</b>, <br><br>Please\n        register for your own API Key today at https://todoapi.net/register ",
        "version": "1.0"
    },
    "paths": {
        "/api/keys/register": {
            "post": {
                "tags": [
                    "Integrations"
                ],
                "summary": "Register for new api key",
                "operationId": "IntegrationController.Register",
                "requestBody": {
                    "description": "Pass email and captcha",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "captcha"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "user1@mail.com"
                                    },
                                    "captcha": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Registration successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "We have emailed you your api key."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/keys/forgot": {
            "post": {
                "tags": [
                    "Integrations"
                ],
                "summary": "Resend apikey to email on file",
                "operationId": "IntegrationController.Forgot",
                "requestBody": {
                    "description": "Pass email and captcha",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
