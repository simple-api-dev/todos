                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "We have emailed you your api key again."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/keys/deregister": {
            "post": {
                "tags": [
                    "Integrations"
                ],
                "summary": "Delete your developer account",
                "operationId": "IntegrationController.Deregister",
                "requestBody": {
                    "description": "Pass email and code",
